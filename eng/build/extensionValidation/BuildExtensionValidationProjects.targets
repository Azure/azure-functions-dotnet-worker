<Project>
    <PropertyGroup>
        <_ValidationOutputDirectory>$(MSBuildThisFileDirectory)..\..\..\ext-check</_ValidationOutputDirectory>
    </PropertyGroup>

    <ItemGroup>
        <ProjectFiles Include="$(_ValidationOutputDirectory)\**\*.csproj" />
    </ItemGroup>

    <Target Name="BuildExtensionValidationProjects" DependsOnTargets="Initialize">
        <Message Text="Building the following projects:" />
        <Message Text="@(ProjectFiles)" />
        <MSBuild Projects="@(ProjectFiles)" Targets="Build" />
    </Target>
</Project>