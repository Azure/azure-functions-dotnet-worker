<Project>

  <PropertyGroup>
    <AzureFunctionsSdkTasksDirectory Condition="'$(MSBuildRuntimeType)' == 'Core'">$(MSBuildThisFileDirectory)../tools/netstandard2.0/</AzureFunctionsSdkTasksDirectory>
    <AzureFunctionsSdkTasksDirectory Condition="'$(MSBuildRuntimeType)' != 'Core'">$(MSBuildThisFileDirectory)../tools/net472/</AzureFunctionsSdkTasksDirectory>
    <AzureFunctionsSdkTasksAssembly>$(AzureFunctionsSdkTasksDirectory)Azure.Functions.Sdk.dll</AzureFunctionsSdkTasksAssembly>
    <AzureFunctionsTaskNamespace>Azure.Functions.Sdk.Tasks</AzureFunctionsTaskNamespace>
  </PropertyGroup>

  <Import Project="$(MSBuildThisFileDirectory)../targets/Azure.Functions.Sdk.targets" Condition="'$(_IsExtensionProject)' != 'true'" />
  <Import Project="$(MSBuildThisFileDirectory)../targets/inner/Azure.Functions.Sdk.Inner.targets" Condition="'$(_IsExtensionProject)' == 'true'" />

</Project>
