<Project ToolsVersion="14.0"
         xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Target Name="_FunctionsBuildTargetApp" BeforeTargets="Build">
      <PropertyGroup>
          <_FunctionsTestProjDir>$(TargetDir).testproj</_FunctionsTestProjDir>
      </PropertyGroup>
      
      <MakeDir Directories="$(_FunctionsTestProjDir)" />
      <MSBuild Projects="@(ProjectReference)" Properties="OutputPath=$(_FunctionsTestProjDir)" />
  </Target>

</Project>